{
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "quoteProps": "preserve",
    "trailingComma": "none",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.{yml,yaml}",
            "options": {
                "singleQuote": true,
                "quoteProps": "preserve"
            }
        },
        {
            "files": "*.py",
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
