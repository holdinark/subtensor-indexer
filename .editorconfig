# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation for Python files
[*.py]
indent_style = space
indent_size = 4

# 2 space indentation for YAML, JSON, and other config files
[*.{yml,yaml,json,toml}]
indent_style = space
indent_size = 2
# Preserve quote styles in YAML files
quote_type = preserve

# 2 space indentation for Dockerfiles
[Dockerfile*]
indent_style = space
indent_size = 2

# 4 space indentation for Rust files
[*.rs]
indent_style = space
indent_size = 4

# Makefile should use tabs
[Makefile]
indent_style = tab

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false 